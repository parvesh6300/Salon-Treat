<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dcube.com.salonseek.PhoneActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:background="@color/white"
        android:typeface="monospace"
        android:id="@+id/phonetxt"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Please enter your phone number,so we can notify you of any changes to your treatment."
        android:textColor="@color/graytext"
        android:layout_marginTop="30dp"
        android:layout_below="@id/phonetxt"
        android:textSize="16sp"
        android:typeface="monospace"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>
    
    <EditText
        android:id="@+id/ed_phone_no"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="phone"
        android:background="@drawable/transparent"/>

    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="@color/graytext"/>

    <Spinner
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/spinner"/>

    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="@color/graytext"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Done"
        android:textColor="@color/white"
        android:background="@color/colorblue"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/done"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
