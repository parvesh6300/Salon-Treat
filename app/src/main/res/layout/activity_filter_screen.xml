<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="dcube.com.salonseek.FilterScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textColor="@color/colorblue"
            android:textSize="20sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Done"
            android:textColor="@color/colorblue"
            android:textSize="20sp"
            android:typeface="monospace" />

    </RelativeLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_below="@+id/tv_reset"
        android:layout_marginTop="10sp"
        android:background="@color/graycolor" />

    <TextView
        android:id="@+id/tv_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Sort"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:typeface="monospace" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_char"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:background="@color/colorblue"
            android:gravity="center_horizontal|center_vertical"
            android:text="A-Z"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:typeface="monospace" />


        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_reset"
            android:background="@color/colorblue" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center_horizontal|center_vertical"
            android:text="Rating"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="monospace" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_reset"
            android:background="@color/colorblue" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center_horizontal|center_vertical"
            android:text="Distance"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="monospace" />


        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_reset"
            android:background="@color/colorblue" />

        <TextView
            android:id="@+id/tv_popularity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center_horizontal|center_vertical"
            android:text="Popularity"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="monospace" />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Distance"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:typeface="monospace" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_nearest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".28"
            android:background="@color/colorblue"
            android:gravity="center_horizontal|center_vertical"
            android:text="Nearest"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:typeface="monospace" />


        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_reset"
            android:background="#458DC6" />

        <TextView
            android:id="@+id/tv_20_km"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".37"
            android:gravity="center_horizontal|center_vertical"
            android:text="20 KM"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="monospace" />

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_reset"
            android:background="#458DC6" />

        <TextView
            android:id="@+id/tv_40_km"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".36"
            android:gravity="center_horizontal|center_vertical"
            android:text="40 KM"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:typeface="monospace" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_below="@+id/tv_reset"
        android:layout_marginTop="30sp"
        android:background="@color/graycolor" />

    <RelativeLayout
        android:id="@+id/rel_salon_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp">

        <ImageView
            android:id="@+id/iv_treatment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/allselected" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_treatment"
            android:text="Salon Type (all)"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:typeface="monospace" />

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/downarrow" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_below="@+id/tv_reset"
        android:layout_marginTop="10sp"
        android:background="@color/graycolor" />


    <RelativeLayout
        android:id="@+id/rel_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp">

        <ImageView
            android:id="@+id/iv_price"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/pricetag"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_price"
            android:text="Price (any)"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:typeface="monospace" />

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/downarrow" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="10sp"
        android:background="@color/graycolor" />

    <LinearLayout
        android:id="@+id/lin_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Favorites"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:typeface="monospace" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginTop="10sp"
            android:background="@color/graycolor" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_prev_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_prev_visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/treatment"
            android:text="Previously Visited"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:typeface="monospace" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginTop="10sp"
            android:background="@color/graycolor" />


    </LinearLayout>


</LinearLayout>
