<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="100dp"
    android:layout_height="30dp"
    android:id="@+id/layout_date_item_outer_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_date_day"
        android:text="day"
        android:textSize="16sp"
        android:textColor="@color/colortextblack"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_date_text"
        android:text="date"
        android:textSize="16sp"
        android:textColor="@color/colortextblack"
        android:layout_toRightOf="@id/layout_date_day"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="3dp"
        android:background="@color/colorblue"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>