<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorblue</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:typeface">monospace</item>
        <item name="colorPrimary">@color/colorblue</item>


    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="myrating" parent="@android:style/Widget.RatingBar">

        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">70sp</item>
        <item name="android:maxHeight">70sp</item>

    </style>

    <style name="myratingblue" parent="@android:style/Widget.RatingBar">

        <item name="android:progressDrawable">@drawable/star</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>

    </style>

    <style name="myratingwhite" parent="@android:style/Widget.RatingBar">

        <item name="android:progressDrawable">@drawable/starwhite</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">

        <item name="android:button">@drawable/radiobutton_drawable</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>

    </style>

</resources>
